{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Transaction Authorizers Event",
  "type": "object",
  "properties": {
    "transaction_id": { "type": "string" },
    "authorizer": { "type": "string" },
    "decision": { "type": "string", "enum": ["APPROVED", "DECLINED", "REVIEW"] },
    "reason": { "type": "string" },
    "amount": { "type": "number" },
    "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["transaction_id", "authorizer", "decision"]
}
